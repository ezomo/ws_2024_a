<launch>
    <!-- joys -->
        <!-- <node pkg="joy" exec="joy_node"> -->

        <node pkg="joy" exec="joy_node">
            <param name="device_id" value="0"/>
            <remap from="/joy" to="/joy_1"/>
        </node>

